.button
  position relative
  appearance none   /*  */
  -webkit-appearance none /* 默认样式清空 */;
  background-color #f72359
  padding 1em 2em
  border none 
  font-size 1.2em
  cursor pointer
  outline none  /*轮廓*/
  overflow hidden
  border-radius 100px
  &::before
    --size 0
    content ''
    position absolute
    left var(--x)
    top var(--y)
    width var(--size)
    height var(--size)
    background radial-gradient(circle closest-side, #4405f7, transparent)  /*环形渐变*/
    transform translate(-50%,-50%)
  &:hover::before
    --size 400px

